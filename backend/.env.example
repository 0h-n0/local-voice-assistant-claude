# Local Voice Assistant Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required for external services)
# =============================================================================

# Deepgram API Key for Speech-to-Text
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI API Key for LLM
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Model Paths
# =============================================================================

# TTS Model Directory
TTS_MODEL_PATH=model_assets/jvnv-F1-jp

# TTS Model File
TTS_MODEL_FILE=jvnv-F1-jp_e160_s14000.safetensors

# TTS Device (cpu or cuda)
TTS_DEVICE=cpu

# =============================================================================
# OpenAI Settings
# =============================================================================

# OpenAI API Base URL (for custom endpoints, leave empty for default)
OPENAI_BASE_URL=

# OpenAI Model Name
OPENAI_MODEL=gpt-4o-mini

# Max Tokens in Response
OPENAI_MAX_TOKENS=1000

# Max Concurrent API Requests
OPENAI_MAX_CONCURRENT=10

# =============================================================================
# Application Settings
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Debug Mode
DEBUG=false

# =============================================================================
# Performance Settings
# =============================================================================

# TTS Max Concurrent Requests
TTS_MAX_CONCURRENT=3

# Orchestrator Max Concurrent Requests
ORCHESTRATOR_MAX_CONCURRENT=5

# Orchestrator Timeout (seconds)
ORCHESTRATOR_TIMEOUT=30

# =============================================================================
# WebSocket Settings
# =============================================================================

# Heartbeat Interval (seconds)
WS_HEARTBEAT_INTERVAL=30

# Max Audio Duration (seconds)
WS_MAX_AUDIO_DURATION=60

# =============================================================================
# Storage Settings
# =============================================================================

# Conversation Database Path
CONVERSATION_DB_PATH=data/conversations.db
